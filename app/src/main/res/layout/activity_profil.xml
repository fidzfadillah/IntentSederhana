<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@mipmap/my_pict"
        android:layout_marginBottom="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nama: Muhammad Hafidz Fadillah"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kelas: XII Rekayasa Perangkat Lunak 2"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:gravity="center">
        <Button
            android:id="@+id/instagram"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@mipmap/ig"
            android:layout_marginRight="20dp"/>
        <Button
            android:id="@+id/facebook"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@mipmap/fb"
            android:layout_marginRight="20dp"/>
        <Button
            android:id="@+id/twitter"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@mipmap/twit"/>
    </LinearLayout>

</LinearLayout>